@model Web.ViewModels.ProductSearchResultModel

<div class="row">
	<div class="col-3 bg-light">
		<div class="w-100">123</div>
	</div>
	<div class="col-8">
		<ul class="list-group justify-content-start">
			@foreach (var product in Model.Products)
			{
				<li class="list-group-item rounded-4 m-0 mt-1 mb-1 justify-content-center">
					<div class="row m-0">
						<div class="col-md-2">
							picture
						</div>
						<div class="col-md-6">
							<a href="#" class="text-black" style="text-decoration: none;">@product.Name</a>
						</div>
						<div class="col-md-4 justify-content-center">
							<div class="text-end">Starts from @product.MinPrice$</div>
							<div class="text-end"><a href="#">@product.ShopCount offers</a></div>
						</div>
					</div>
				</li>
			}
		</ul>
	</div>
</div>