<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>PCWorld</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-action="Index" asp-controller="Home">PCWorld</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						  aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-action="Index" asp-controller="Home">Home</a>
						</li>
						<li class="nav-item">
							<div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
								<ul class="navbar-nav">
									<li class="nav-item dropdown">
										<a class="nav-link text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
											Dropdown
										</a>
										<ul class="dropdown-menu dropdown-menu-dark">
											<li><a class="dropdown-item" id="signin-btn">Sign in</a></li>
											<li><a class="dropdown-item" id="register-btn">Sign out</a></li>
										</ul>
									</li>
								</ul>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			<!-- Modal -->
			<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
				<div class="modal-dialog" id="md">
				</div>
			</div>

			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2022 - PCWorld
		</div>
	</footer>

	@await RenderSectionAsync("Scripts", required: false)

	<script>
		modalId = "#exampleModal";

		handlerUrls = {
			 "signin-btn": "Account/Login",
			 "register-btn": "Account/Register",
			 "signin-to-register-btn": "Account/Register"
		};

		formInfos = {
			 "submit-signin-form-btn": {
				  id: "signin-form",
				  url: "Account/loginAction"
			 },
			 "submit-register-form-btn": {
				  id: "register-form",
				  url: "Account/registerAction"
			 }
		}

		$("body").on("click", "#signin-btn,#register-btn,#signin-to-register-btn", function () {
			 var id = this.id;

			 var url = handlerUrls[id];
			 $.ajax({
				  url: url,
				  success: function (data) {
						$(modalId + " .modal-dialog").html(data);
						$(modalId).modal("show");
				  }
			 })
		})

		$("body").on("click", "#submit-signin-form-btn,#submit-register-form-btn", function () {
			var id = this.id;
			var formInfo = formInfos[id];

			var data = $('#' + formInfo.id).serialize();
			var url = formInfo.url;

			$.ajax({
				url: url,
				type: "POST",
				data: data,
				success: function (data) {
					$(modalId + " .modal-dialog").html(data);

					var form = $(modalId + " .modal-dialog").find('[id=' + formInfo.id + ']');
					var isValid = form.find('[name=IsValid]').val() == 'True';

					if (isValid) {
						 $(modalId).modal("hide");
						 return;
					}

					$(modalId).modal("show");
				}
			});
		});
	</script>
</body>
</html>